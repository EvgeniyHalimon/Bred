						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n\t\"firstName\": \"string\",\n    \"lastName\": \"string\",\n    \"email\": \"q@email.com\",\n    \"password\": \"qwertyqwertyqwerty\",\n    \"bio\": \"Hello my name is Monti\"\n}",
